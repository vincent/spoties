{
  "name": "frontend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "dev:backend": "cd ../backend && ./modd",
    "backend": "AUDITLOG=users,posts ../backend/entrypoint.sh ./pocketbase serve --publicDir=../frontend/build",
    "build": "vite build",
    "build:backend": "cd ../backend && go build",
    "typegen": "pocketbase-typegen --db ../backend/pb_data/data.db --out ./src/lib/pocketbase/generated-types.ts",
    "test": "playwright test",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.20.8",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.1.6",
    "@types/sortablejs": "^1.15.8",
    "flowbite-svelte-icons": "^2.1.1",
    "pocketbase-typegen": "^1.3.1",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "sass": "^1.87.0",
    "sortablejs": "^1.15.6",
    "svelte": "^5.28.2",
    "svelte-check": "^4.1.7",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^4.1.6",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^6.0.3"
  },
  "type": "module",
  "dependencies": {
    "@friendofsvelte/tipex": "^0.0.8-dev.0",
    "@popperjs/core": "^2.11.8",
    "flowbite": "^3.1.2",
    "flowbite-svelte": "^1.1.0",
    "lucide": "^0.509.0",
    "lucide-svelte": "^0.509.0",
    "places-autocomplete-svelte": "^2.2.8",
    "pocketbase": "^0.26.0",
    "svelte-modals": "^2.0.1",
    "tailwind-merge": "^3.2.0",
    "zod": "^3.24.4"
  }
}
